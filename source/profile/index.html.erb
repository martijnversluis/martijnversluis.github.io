---
title: Martijn Versluis - profile
---

<div class="column-layout">
  <div class="column-layout__sidebar tile picture">
    <%= image_tag 'martijn.png' %>
  </div>

  <section class="column-layout__main tile">
    <div class="tile__inner">
      <ul class="timeline">
        <% Project.from_data(data.projects).each do |project| %>
          <li class="timeline__entry">
            <time class="timeline__entry-date"><%= project.start_year %></time>

            <section class="rich-text timeline__entry-content">
              <h2 class="timeline__entry-title">
                <%= project.company %>
                (<%= external_link(project.company_url) %>)
              </h2>

              <div class="timeline__entry-description">
                <%= render_markdown(project.project) %>
              </div>

              <ul class="timeline__entry-labels">
                <% project.technologies.each do |technology| %>
                  <li class="timeline__entry-label" style="background-color: <%= pastel_colour(technology) %>"><%= technology %></li>
                <% end %>
              </ul>
            </section>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
</div>
